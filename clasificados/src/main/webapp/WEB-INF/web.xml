<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>clasificados</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
   <!-- Parámetros de contexto -->
  <context-param>
    <param-name>nombreSitio</param-name>
    <param-value>hola manola</param-value>
  </context-param>
  
  <context-param>
    <param-name>emailContacto</param-name>
    <param-value>correo@misitioweb.com</param-value>
  </context-param>
  
  <context-param>
    <param-name>telefonoContacto</param-name>
    <param-value>123-456-7890</param-value>
  </context-param>
  
  <!-- onfigurar el Listener para que sea reconocido por la aplicación web. -->
  <listener>
    <listener-class>listener.ListenerClasificado</listener-class>
  </listener>
</web-app>